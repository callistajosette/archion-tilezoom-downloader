{
    "manifest_version": 3,
    "name": "XHR Interceptor",
    "version": "1.0",
    "description": "Save and view all XHR response bodies.",
    "permissions": [
      "activeTab",
      "scripting",
      "storage"
    ],
    "host_permissions": [
        "<all_urls>"
      ],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["*://*.archion.de/*"],
        "js": ["content.js"]
      }
    ],
    "web_accessible_resources": [
        {
            "resources": ["inject.js"],
            "matches": ["<all_urls>"]
        }
    ],
    "action": {
      "default_popup": "popup.html"
    }
  }
  